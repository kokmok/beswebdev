<form action="" method="post">
    <div class="row form-row">    
        <div class="col-md-offset-1 col-lg-offset-1 col-sm-offset-1 col-md-10 col-lg-10 col-sm-10 col-xs-12">    
            <div class="formElement col-md-6 col-lg-6 col-sm-6 col-xs-12">
                {%if contactForm.name.vars.errors|length%}
                <div class="form-error">
                    {%for error in contactForm.name.vars.errors %}
                        {{error.message}}
                    {%endfor%}
                </div>
                {%endif%}
                <input type="text" name="{{contactForm.name.vars.full_name}}" required="required" placeholder ="Nom, prÃ©nom" class="form-control" value="{{contactForm.name.vars.value}}"/>
            </div>
            <div  class="formElement col-md-6 col-lg-6 col-sm-6 col-xs-12">
                {%if contactForm.email.vars.errors|length%}
                <div class="form-error">
                    {%for error in contactForm.email.vars.errors %}
                        {{error.message}}
                    {%endfor%}
                </div>
                {%endif%}
                <input type="email" name="{{contactForm.email.vars.full_name}}" required="required" placeholder  ="Email" class="form-control" value="{{contactForm.email.vars.value}}"/>
            </div>
        </div>
    </div>
    <div class="row form-row">    
        <div class="col-md-offset-1 col-lg-offset-1 col-sm-offset-1 col-md-10 col-lg-10 col-sm-10 col-xs-12">    
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                {%if contactForm.message.vars.errors|length%}
                <div class="form-error">
                    {%for error in contactForm.message.vars.errors %}
                        {{error.message}}
                    {%endfor%}
                </div>
                {%endif%}
                <textarea name="{{contactForm.message.vars.full_name}}"  required="required" id="contact-message" class="form-control" placeholder="Votre message">{{contactForm.message.vars.value}}</textarea>
            </div>
        </div>
    </div>
    <div class="row form-row">   
        {{form_widget(contactForm._token)}}
        <div class="col-md-offset-1 col-lg-offset-1 col-sm-offset-1 col-md-10 col-lg-10 col-sm-10 col-xs-12">    
            <div class="formElement col-md-4 col-lg-4 col-sm-4 col-xs-12">
                <input type="submit" name="submit" placeholder ="Envoyer" class="form-control" id="submit-btn"/>
            </div>
        </div>
    </div>
</form>
