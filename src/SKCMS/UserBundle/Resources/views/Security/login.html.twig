{%extends 'SKCMSAdminBundle::layout.html.twig'%}
{% trans_default_domain 'FOSUserBundle' %}

{%block body %}
    <div class="container">
<div class="row-fluid">
    <div class="span12 center login-header">
        <h2><strong>SOLID-KISS</strong> Admin</h2>
    </div><!--/span-->
</div><!--/row-->

<div class="row-fluid">
    <div class="well span5 center login-box">
        <div class="alert alert-info">
        Please login with your Username and Password.
        </div>
        {% if error %}
            <div class="alert alert-info">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <fieldset>
                <div class="control-group row" title="Username" data-rel="tooltip">
                    <span class="add-on"><i class="icon-user"></i></span><input autofocus class="input-large form-control" id="username" type="text" value="{{ last_username }}" required="required" placeholder="username" name="_username" />
                </div>
                <div class="clearfix"></div>

                <div class="control-group row" title="Password" data-rel="tooltip">
                    <span class="add-on"><i class="icon-lock"></i></span><input class="input-large form-control" required="required" name="_password" id="password" type="password" placeholder="password" value="admin123456" />
                    <p><a href="{{path('fos_user_resetting_request')}}">Forgot your password?</a></p>
                </div>
                <div class="clearfix"></div>

                <div class="control-group row">
                <label class="remember" for="remember"><input type="checkbox" id="remember" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}</label>
                </div>
                <div class="clearfix"></div>

                <p class="pull-right">
                    <button type="submit" class="btn btn-primary">Login</button>
                </p>
            </fieldset>
        </form>
    </div><!--/span-->
    </div><!--/span-->
    </div><!--/span-->
{%endblock%}