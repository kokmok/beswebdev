{%extends "SKCMSAdminBundle:Element/Template:content.html.twig"%}



{%block header2 %}List{%endblock%}
{%block headerRightLinks%}
<div class="box-icon pull-right">
    <a href="{%block createLink %}{%endblock%}" class="btn btn-round pink-btn "><i class="fa fa-plus"></i> ADD</a>
</div>
{%endblock%}

{%block boxContent %}
<table class="table table-striped table-bordered bootstrap-datatable datatable">
  <thead>
        <tr>
            {%if entityParams is defined and entityParams.sort is defined and entityParams.sort != "none"%}
                <th>{{entityParams.sort}}</th>
            {%endif%}
            {%block th %}

            <th>Actions</th>
            {%endblock%}
        </tr>
  </thead>   
  <tbody>
      {%for entity in entities%}
          
        <tr>
            {%if entityParams is defined and entityParams.sort is defined and entityParams.sort != "none"%}
                <td class="sorterTd">
                    #<span class="sortValue">{{attribute(entity,entityParams.sort) }}</span>
                    <a href="{{path('sk_admin_edit_push_up',app.request.attributes.get('_route_params')|merge({id:entity.id}))}}" class="sorterLink up"><i class="fa fa-arrow-up"></i></a> 
                    <a href="{{path('sk_admin_edit_pull_down',app.request.attributes.get('_route_params')|merge({id:entity.id}))}}" class="sorterLink down"><i class="fa fa-arrow-down"></i></a>
                    
                </td>
            {%endif%}
            {%block tr %}

            {%endblock%}
        </tr>

        {%endfor%}

  </tbody>
</table>   
{%endblock%}
